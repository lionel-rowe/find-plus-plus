{
	"manifest_version": 3,
	"name": "Find++",
	"description": "Enhanced find-in-page, with regexes!",
	"version": "0.0.0",
	"icons": {
		"128": "/icons/favicon.png"
	},
	"action": {
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "Command+Shift+F"
			},
			"description": "Open the Find++ search box"
		}
	},
	"content_scripts": [
		{
			"js": ["/content.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"/main.js",
				"/search-box.html",
				"/common.css",
				"/search-box.css",
				"/worker-runner.html",
				"/workerRunner.js"
			],
			"matches": ["<all_urls>"]
		}
	],
	"permissions": [
		"activeTab",
		"management",
		"scripting",
		"tabs",
		"storage"
	],
	"host_permissions": [
		"*://*/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	}
}
