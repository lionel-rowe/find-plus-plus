{
	"manifest_version": 3,
	"name": "Find++",
	"description": "Enhanced find-in-page, with regexes!",
	"version": "0.0.0",
	"icons": {
	},
	"content_scripts": [
		{
			"js": ["/init.js"],
			"matches": ["<all_urls>"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["/main.js", "/template.html", "/styles.css"],
			"matches": ["<all_urls>"]
		}
	],
	"permissions": [
		"activeTab",
		"management",
		"scripting",
		"tabs",
		"storage"
	],
	"host_permissions": [
		"*://*/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	}
}
