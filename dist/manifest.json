{
	"manifest_version": 3,
	"name": "Find++",
	"description": "Enhanced find-in-page, with regexes!",
	"version": "0.0.0",
	"icons": {
	},
	"commands": {
		"open": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "Command+Shift+Y"
			},
			"description": "Open the Find++ search box"
		},
		"matchCase": {
			"suggested_key": "Alt+C",
			"description": "Match case-sensitively"
		},
		"wholeWord": {
			"suggested_key": "Alt+W",
			"description": "Only match whole words"
		},
		"useRegex": {
			"suggested_key": "Alt+R",
			"description": "Use regular expression syntax"
		}
	},
	"content_scripts": [
		{
			"js": ["/content.js"],
			"matches": ["<all_urls>"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["/main.js", "/template.html", "/common.css", "/search-box.css"],
			"matches": ["<all_urls>"]
		}
	],
	"permissions": [
		"activeTab",
		"management",
		"scripting",
		"tabs",
		"storage"
	],
	"host_permissions": [
		"*://*/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	}
}
